<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<%= form_tag movies_path, :method => :get do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]" %>
  <% end %>
  <%= submit_tag 'Apply' %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <a href="<%=movies_path(sort: 'title')%>" >Movie Title</a>
      </th>
      <th>Rating</th>
      <th>
        <a href="<%=movies_path(sort: 'release_date')%>" >Release Date</a>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>